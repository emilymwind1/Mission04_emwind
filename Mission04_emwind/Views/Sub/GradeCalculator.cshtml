@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;

<h2>Grade Calculator Form</h2>
<p><i>Input percentage scored for each category</i></p>
<form method="post">
    <label>Assignments</label>
    <input type="number" id="assign" asp-for="Assign"/><br /><br />

    <label>Quizzes</label>
    <input type="number" id="quiz" asp-for="Quiz"/><br /><br />

    <label>Group Projects</label>
    <input type="number" id="group" asp-for="Group"/><br /><br />

    <label>INTEX</label>
    <input type="number" id="intex" asp-for="Intex"/><br /><br />

    <label>Midterm Exam</label>
    <input type="number" id="midterm" asp-for="Midterm"/><br /><br />

    <label>Final Exam</label>
    <input type="number" id="final" asp-for="Final"/><br /><br />

    <p id="gradeOutput"></p>
    <input id="calcGrade" type="submit" value="Calculate Grade" /><br />

    <div asp-validation-summary="All"></div>
</form>

<!-- reference js and jquery files -->

<script src="js/grade_calculator.js"></script>